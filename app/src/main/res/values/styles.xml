<resources>
    <!-- Base application theme. -->
    <style name="AppCustomLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#3F51B5</item>
        <item name="colorAccent">#00BCD4</item>
    </style>

    <!-- Text format for titles -->
    <style name="TitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Text format for subtitles -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text format for the main info -->
    <style name="InfoTextStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Text format for extra info -->
    <style name="ExtraInfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>


