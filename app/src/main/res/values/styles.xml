<resources>

    <!-- Text format for titles -->
    <style name="TitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Text format for subtitles -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Text format for the main info -->
    <style name="InfoTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Text format for extra info -->
    <style name="RegularTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text format for navigation view -->
    <style name="NavViewTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
