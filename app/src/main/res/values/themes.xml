<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light application theme. -->
    <style name="AppCustomLightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#2E86C1</item>
        <item name="colorPrimaryDark">#1F587E</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:windowBackground">#F4F4F6</item>
        <item name="android:fillColor">#000000</item>
        <item name="toolbarIconColor">@color/toolbarIconLight</item>
        <item name="backgroundImage">@drawable/background_light</item>
        <item name="backgroundRecyclerColor">#FFFFFF</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppCustomDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#1B2137</item>
        <item name="colorPrimaryDark">#131625</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:windowBackground">#33343B</item>
        <item name="android:fillColor">#FFFFFF</item>
        <item name="toolbarIconColor">@color/toolbarIconLight</item>
        <item name="backgroundImage">@drawable/background_dark</item>
        <item name="backgroundRecyclerColor">#1B2137</item>
    </style>

    <style name="CustomTextButtonTheme" parent="">
        <item name="android:textAppearance">@style/InfoTextStyle</item>
        <item name="backgroundTint">@color/btn_color</item>
    </style>

</resources>